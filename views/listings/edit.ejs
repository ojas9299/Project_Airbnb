<%-layout("./layouts/boilerplate.ejs")%>
<div class="container">
  <div class="card airbnb-card">
    <div class="card-body">
      <h2 class="airbnb-card-title">Edit Listing</h2>
      <form
        action="/listing/<%= listing._id %>/?_method=PUT"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Title:</label>
          <textarea
            id="title"
            name="listing[title]"
            value=""
            rows="1"
            class="form-control airbnb-form-control"
            required
          >
<%= listing.title %></textarea
          >
          <div class="invalid-feedback">Enter valid Title!</div>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea
            id="description"
            name="listing[description]"
            rows="4"
            class="form-control airbnb-form-control"
            required
          >
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter valid Description</div>
        </div>
        <div class="form-group">
          <label for="price">Price:</label>
          <textarea
            id="price"
            type="number"
            name="listing[price]"
            rows="1"
            class="form-control airbnb-form-control"
            required
          >
<%= listing.price %></textarea
          >
          <div class="invalid-feedback">Enter valid price!</div>
        </div>
        <div class="form-group">
          <label for="location">Location:</label>
          <textarea
            id="location"
            name="listing[location]"
            rows="1"
            class="form-control airbnb-form-control"
            required
          >
          <%= listing.location %></textarea
          >
          <div class="invalid-feedback">enter valid location</div>
        </div>
        <div class="form-group">
          <label for="country">Country:</label>
          <textarea
            id="country"
            name="listing[country]"
            rows="1"
            class="form-control airbnb-form-control"
            required
          >
          <%= listing.country %></textarea
          >
          <div class="invalid-feedback">entry valid country</div>
        </div>
        <div class="my-3">
          <label for="country" class="mb-2">Original Listing Image : </label
          ><br />
          <img src="<%=originalImage%>" alt="Image" />
        </div>
        <div class="form-group">
          <label for="img">Upload New Image</label>
          <input
            type="file"
            id="img"
            name="listing[image]"
            rows="1"
            class="form-control airbnb-form-control"
          />
        </div>
        <button type="submit" class="btn airbnb-btn-primary">
          Save Changes
        </button>
      </form>
    </div>
  </div>
</div>
